{
  "name": "ts-mocha",
  "version": "2.0.0",
  "description": "Mocha thin wrapper that allows running TypeScript tests with TypeScript runtime (ts-node) to get rid of compilation complexity",
  "repository": "https://github.com/piotrwitek/ts-mocha",
  "author": "Piotr Witek <piotrek.witek@gmail.com> (http://piotrwitek.github.io)",
  "license": "MIT",
  "main": "src/index.js",
  "bin": {
    "ts-mocha": "./bin/ts-mocha"
  },
  "engines": {
    "node": ">= 6.X.X"
  },
  "scripts": {
    "clean": "rm -rf node_modules/",
    "reinstall": "yarn run clean && yarn install",
    "pretest:baseline": "yarn install --peer",
    "test:baseline": "./bin/ts-mocha -p test/baseline/tsconfig.json test/baseline/**/*.spec.ts && node test/baseline/programmatic-use-test.js",
    "pretest:paths": "yarn install --optional",
    "test:paths": "./bin/ts-mocha --paths -p test/paths/tsconfig.json test/paths/**/*.spec.ts && node test/paths/programmatic-use-test.js",
    "test": "npm run test:baseline & npm run test:paths",
    "prepublishOnly": "yarn run clean && yarn install --production && yarn add -D mocha && yarn test"
  },
  "dependencies": {
    "ts-node": "7.0.0"
  },
  "devDependencies": {
    "@types/expect": "1.20.3",
    "@types/mocha": "5.1.0",
    "@types/node": "9.6.2",
    "expect": "22.4.3",
    "husky": "0.14.3",
    "mocha": "^5.2.0",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
  },
  "peerDependencies": {
    "mocha": "^3.X.X || ^4.X.X || ^5.X.X"
  },
  "optionalDependencies": {
    "tsconfig-paths": "^3.5.0"
  },
  "files": [
    "bin/",
    "src/",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "yarn.lock"
  ],
  "keywords": [
    "ts",
    "mocha",
    "typescript",
    "ts-node",
    "test"
  ],
  "greenkeeper": {
    "ignore": [
      "@types/expect",
      "@types/mocha",
      "@types/node",
      "expect",
      "husky",
      "tslint"
    ]
  }
}
