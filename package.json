{
  "name": "ts-mocha",
  "version": "1.0.0",
  "description": "Mocha wrapper that allows running TypeScript tests using TypeScript runtime (ts-node) to get rid of compilation complexity",
  "repository": "https://github.com/piotrwitek/ts-mocha",
  "author": "Piotr Witek <piotrek.witek@gmail.com> (http://piotrwitek.github.io)",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": "./bin/ts-mocha",
  "engines": {
    "node": ">= 0.10.x"
  },
  "scripts": {
    "prepublishOnly": "yarn run clean && yarn install --production && yarn add -D mocha && yarn start",
    "clean": "rm -rf node_modules/",
    "start": "./bin/ts-mocha -p test test/**/*.spec.ts",
    "test": "echo \"Yet no tests was needed.\""
  },
  "dependencies": {
    "ts-node": "^1.7.2"
  },
  "devDependencies": {
    "@types/expect": "^1.13.31",
    "@types/mocha": "^2.2.33",
    "@types/node": "^0.0.2",
    "expect": "^1.20.2",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4"
  },
  "peerDependencies": {
    "mocha": "^3.2.0"
  },
  "files": [
    "bin/",
    "src/",
    "package.json",
    "README.md",
    "LICENSE",
    "yarn.lock"
  ],
  "keywords": [
    "ts",
    "mocha",
    "typescript",
    "ts-node",
    "test"
  ]
}
